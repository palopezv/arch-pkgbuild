post_install() {
  usr/sbin/gconfpkg --install "vuze"
  update-desktop-database -q
  ln -s /usr/bin/vuze /usr/bin/azureus
}

pre_upgrade() {
  pre_remove "$1"
}

post_upgrade() {
  post_install "$1"
}

pre_remove() {
  usr/sbin/gconfpkg --uninstall "vuze"
  rm -f /usr/bin/azureus

}

post_remove() {
  update-desktop-database -q
}

