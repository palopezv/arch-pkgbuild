# Maintainer: Yarema aka Knedlyk <yupadmin@gmail.com>

pkgname=texstudio-svn
pkgver=4088
pkgrel=1
pkgdesc="TeXstudio is a fork of the LaTeX IDE TexMaker."
arch=('i686' 'x86_64')
url="http://texstudio.sourceforge.net"
license=('GPL')
depends=('qt4' 'poppler-qt')
conflicts=('texmakerx' 'texstudio')
source=("texstudio-svn::svn://svn.code.sf.net/p/texstudio/code/trunk")
md5sums=('SKIP')

version () {
  cd $pkgname
  svnversion | tr -d [A-z]
}

build () {
  cd "$srcdir/$pkgname"

  qmake-qt4 texstudio.pro || return 1
  make || return 1

}

package() {
  cd "$srcdir/$pkgname"

  make INSTALL_ROOT="$pkgdir" install || return 1

  sed -i $pkgdir/usr/share/applications/texstudio.desktop -e "s:texmakerx:texstudio:" 
}
