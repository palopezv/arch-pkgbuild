# Contributor: orux

pkgname=ttf-charis
pkgver=4.112
pkgrel=2
pkgdesc="Charis is similar to Bitstream Charter, one of the first fonts designed specifically for laser printers."
arch=('any')
url="http://scripts.sil.org/cms/scripts/page.php?site_id=nrsi&item_id=CharisSILfont"
license=('custom:OFL')
depends=('fontconfig' 'xorg-fonts-encodings' 'xorg-font-utils')
conflicts=('ttf-sil-fonts')
install="$pkgver.install"
source=("CharisSIL-$pkgver.zip::http://scripts.sil.org/cms/scripts/render_download.php?&format=file&media_id=CharisSIL-$pkgver.zip&filename=CharisSIL-$pkgver.zip")
sha256sums=('29a3f35e5a24e631ece7fedc72ad556843e885afd3bd6ba489090a8a1b71ef85')

package() {
  cd $srcdir/CharisSIL-$pkgver
  install -Dm644 OFL.txt "$pkgdir"/usr/share/licenses/"$pkgname"/OFL.txt
  mkdir -p "$pkgdir"/usr/share/fonts/TTF
  install -Dm644 *.ttf -t "$pkgdir"/usr/share/fonts/TTF/
  #install -Dm644 FONTLOG.txt "$pkgdir"/usr/share/doc/"$pkgname"/FONTLOG.txt
}
